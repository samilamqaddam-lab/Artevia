{
  "$schema": "https://schema.modelcontextprotocol.io/config.json",
  "mcpServers": {
    "artevia-database": {
      "command": "npx",
      "args": [
        "-y",
        "@supabase/mcp-server-postgrest@latest",
        "--apiUrl",
        "https://YOUR_PROJECT_REF.supabase.co/rest/v1",
        "--apiKey",
        "YOUR_SUPABASE_SERVICE_ROLE_KEY",
        "--schema",
        "public"
      ],
      "disabled": false,
      "alwaysAllow": []
    },
    "artevia-management": {
      "command": "npx",
      "args": [
        "-y",
        "@supabase/mcp-server-supabase@latest",
        "--project-ref",
        "YOUR_PROJECT_REF"
      ],
      "env": {
        "SUPABASE_ACCESS_TOKEN": "YOUR_SUPABASE_ACCESS_TOKEN",
        "SUPABASE_PROJECT_REF": "YOUR_PROJECT_REF"
      },
      "disabled": false,
      "alwaysAllow": []
    },
    "serpapi-seo": {
      "command": "python3",
      "args": [
        "mcp-servers/serpapi-server.py"
      ],
      "env": {
        "SERPAPI_API_KEY": "YOUR_SERPAPI_API_KEY"
      },
      "disabled": false,
      "alwaysAllow": []
    }
  }
}
